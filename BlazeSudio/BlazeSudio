        if resp == 0:
            if ask(highlight(f'Are you sure you want to {bold("override")} the folder {os.getcwd()} and delete everything in it?')+' \033[90m[y/n]', ['y', 'Y', 'n', 'N']) in (0, 1):
                print('Yes\033[0m')
